{
  "name": "texas",
  "description": "TypeScript, Express App Scaffolding",
  "version": "1.2.0",
  "main": "dist/index.js",
  "author": "Micha≈Ç Wilk <wilk.michal@outlook.com>",
  "repository": {
    "url": "https://github.com/whereiswolf/texas.git"
  },
  "engines": {
    "node": ">= 12.0.0"
  },
  "license": "MIT",
  "private": false,
  "scripts": {
    "test": "jest src/",
    "test:integration": "jest test/",
    "develop": "nodemon ./src/index.ts",
    "start": "yarn build && node ./dist/index.js",
    "serve": "pm2 start ./dist/index.js --name \"app\" -i max",
    "build": "yarn clean && ttsc",
    "docker": "docker-compose -f .docker/docker-compose.dev.yml up --build ",
    "docker:prod": "docker-compose -f .docker/docker-compose.prod.yml up --build -d",
    "clean": "rimraf ./dist/*",
    "clean:git": "rimraf .git && rimraf CHANGELOG.md",
    "release": "standard-version",
    "release:beta": "standard-version --prerelease beta",
    "new:module": "hygen module new",
    "new:middleware": "hygen middleware new"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint src/**/*.ts --fix-dry-run"
    ]
  },
  "dependencies": {
    "body-parser": "1.19.0",
    "class-validator": "0.12.2",
    "class-validator-jsonschema": "2.0.1",
    "cors": "2.8.5",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "express-status-monitor": "1.3.2",
    "helmet": "3.22.0",
    "morgan": "1.10.0",
    "pm2": "4.4.0",
    "routing-controllers": "0.8.1",
    "routing-controllers-openapi": "2.0.0",
    "swagger-jsdoc": "4.0.0",
    "swagger-ui-express": "4.1.4"
  },
  "devDependencies": {
    "@types/cors": "2.8.6",
    "@types/express": "4.17.6",
    "@types/express-status-monitor": "1.2.1",
    "@types/helmet": "0.0.47",
    "@types/jest": "25.2.3",
    "@types/morgan": "1.9.0",
    "@types/node": "13.13.8",
    "@types/supertest": "2.0.9",
    "@types/swagger-jsdoc": "3.0.2",
    "@types/swagger-ui-express": "4.1.2",
    "@typescript-eslint/eslint-plugin": "3.1.0",
    "@typescript-eslint/parser": "3.1.0",
    "@zerollup/ts-transform-paths": "1.7.17",
    "class-transformer": "0.2.3",
    "eslint": "7.0.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.3",
    "husky": "4.2.5",
    "hygen": "5.0.3",
    "jest": "26.0.1",
    "jest-express": "1.12.0",
    "lint-staged": "10.2.4",
    "prettier": "2.0.5",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "standard-version": "8.0.0",
    "supertest": "4.0.2",
    "ts-jest": "26.0.0",
    "ts-node": "8.10.1",
    "ttypescript": "1.5.10",
    "typedi": "0.8.0",
    "typescript": "3.9.3"
  },
  "resolutions": {
    "*/**/minimist": "1.2.5",
    "standard-version/**/yargs-parser": "18.1.3",
    "hygen/**/yargs-parser": "18.1.3"
  }
}
