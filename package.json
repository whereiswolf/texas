{
  "name": "texas",
  "description": "TypeScript, Express App Scaffolding",
  "version": "0.0.4",
  "main": "dist/server.js",
  "author": "Micha≈Ç Wilk <wilk.michal@outlook.com>",
  "repository": {
    "url": "https://github.com/whereiswolf/texas.git"
  },
  "engines": {
    "node": ">= 12.0.0"
  },
  "license": "MIT",
  "private": false,
  "scripts": {
    "test": "jest",
    "dev": "nodemon ./src/server.ts",
    "start:local": "yarn build && yarn start",
    "start": "node ./dist/server.js",
    "build": "yarn clean && ttsc",
    "docker": "docker-compose -f .docker/docker-compose.yml up --build ",
    "clean": "rimraf ./dist/*",
    "clean:git": "rimraf .git",
    "release": "standard-version",
    "release:beta": "standard-version --prerelease beta",
    "new:module": "hygen module new"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint src/**/*.ts --fix-dry-run"
    ]
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-status-monitor": "^1.2.9",
    "helmet": "^3.21.3",
    "joi": "^14.3.1",
    "morgan": "^1.9.1",
    "swagger-jsdoc": "^3.5.0",
    "swagger-ui-express": "^4.1.3"
  },
  "devDependencies": {
    "@types/cors": "2.8.6",
    "@types/express": "4.17.3",
    "@types/helmet": "0.0.45",
    "@types/jest": "25.1.4",
    "@types/joi": "14.3.4",
    "@types/morgan": "1.9.0",
    "@types/node": "13.9.1",
    "@types/swagger-jsdoc": "3.0.2",
    "@types/swagger-ui-express": "4.1.1",
    "@typescript-eslint/eslint-plugin": "2.24.0",
    "@typescript-eslint/parser": "2.24.0",
    "@zerollup/ts-transform-paths": "1.7.12",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "husky": "4.2.3",
    "hygen": "5.0.3",
    "jest": "25.1.0",
    "jest-express": "1.11.3",
    "lint-staged": "10.0.8",
    "mock-express-response": "0.2.2",
    "nodemon": "2.0.2",
    "prettier": "1.19.1",
    "rimraf": "3.0.2",
    "standard-version": "7.1.0",
    "ts-jest": "25.2.1",
    "ts-node": "8.6.2",
    "ttypescript": "1.5.10",
    "typescript": "3.8.3"
  }
}
